<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_dialog"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.04"
        android:background="@drawable/bg_gradient_horiz"
        android:lineSpacingExtra="7sp"
        android:id="@+id/text_title"
        android:gravity="center_horizontal"
        android:text="Nature"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/text_date"
            android:text="23/02/2018"
            android:textSize="32sp"
            android:layout_margin="16dp"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#4cbad8"
            android:textColor="#FFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:id="@+id/button_gasoline"
            android:text="Gasoline"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#4cbad8"
            android:textColor="#FFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:id="@+id/button_distilled"
            android:text="Distilled"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="invisible"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_duration"
                    android:text="2"/>
                <View
                    android:layout_width="28dp"
                    android:layout_height="1px"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#55000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_duration_type"
                    android:text="DAYS"/>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#55000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="center|right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginRight="16dp"
                    android:id="@+id/text_name"
                    android:text="0.1KM"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>